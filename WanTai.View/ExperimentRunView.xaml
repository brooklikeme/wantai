            <GradientStop Color="#FFA0C8C8" Offset="0.52"/>
            <GradientStop Color="#FFBBEAEA" Offset="0.26"/>
            <GradientStop Color="#FF7E9D9D" Offset="0.811"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Operation3"  EndPoint="0,1" StartPoint="0,0">
